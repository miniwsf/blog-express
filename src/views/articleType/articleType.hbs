{{#section 'head'}}
    <link rel="stylesheet" href="../../css/article.css">
    <title>Sunshine wsf</title>
{{/section}}
<div>
	<ol class="breadcrumb">
		<li><a href="#" class="active">类别管理</a></li>
	</ol>
</div>
<div class="content-article" id="articleType">
    <tips ref="tips"></tips>
    <confirm ref="confirm"></confirm>
    <dialogs :dialogform="dialogData.dialogForm" ref="dialogs"></dialogs>
	<div class="search-list">
		<a type="button" class="btn btn-primary" @click="addDemo()">新增类别</a>
	</div>
	<div class="table-responsive table-content">
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th>类别名称</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody>
				<tr v-for="(item,index) in typeList">
					<td>#</td>
					<td v-text="item.typeName"></td>
					<td>
						<a type="button" class="btn btn-primary" @click="addDemo(item._id)">编辑</a>
						<a type="button" class="btn btn-danger" @click="deleteArticleType(item._id)">删除</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
