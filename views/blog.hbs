{{#each article}}
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a href="/index/blogDetail?articleId={{_id}}">{{title}}</a><span></span>
    </h3>
  </div>
  <div class="panel-body">
    <div>{{content}}</div>
    <div class="blog-info">
      <span class="glyphicon glyphicon-tag">{{type.typeName}}&nbsp;
      <span class="glyphicon glyphicon-eye-open"></span>{{readAmount}}&nbsp;
      <span class="glyphicon glyphicon-heart"></span>{{praiseNumber}}&nbsp;
      <span class="glyphicon glyphicon-time">{{create_time}}
    </div>
  </div>
</div>
{{/each}}
<script type="text/javascript" src="/js/home/blog.js"></script>
