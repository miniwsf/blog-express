{{#section 'head'}}
    <link rel='stylesheet' href='../../css/article.css'/>
{{/section}}
<div>
	<ol class="breadcrumb">
		<li><a href="#" class="active">文章管理</a></li>
	</ol>
</div>
<div class="content-article">
	<div class="search-list">
		<label for="title" class="control-label">演示标题</label>
		<input type="text" class="form-control lable-width" placeholder="请输入演示标题名称" id="title">
		<button type="button" class="btn btn-primary">搜索</button>
		<a type="button" class="btn btn-primary" href="/article/articleAdd">新增演示</a>
	</div>
	<div class="table-responsive table-content">
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th>演示标题</th>
					<th>标签</th>
					<th>作者</th>
					<th>发布时间</th>
					<th>演示描述</th>
					<th>点赞数</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody id="tableList">
				{{#each article}}
				<tr>
					<td>#</td>
					<td>{{title}}</td>
					<td>{{type.typeName}}</td>
					<td>{{keywords}}</td>
					<td>{{author.nickName}}</td>
					<td>{{create_time}}</td>
					<td>{{readAmount}}</td>
					<td>{{praiseNumber}}</td>
					<td>
						<a type="button" class="btn btn-primary" href="/blogDetail?articleId={{_id}}">查看详情</a>
						<a type="button" class="btn btn-primary" href="/article/articleAdd?articleId={{_id}}">编辑</a>
						<a type="button" class="btn btn-danger" onclick="deleteArticle('{{_id}}')">删除</a>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
        <div class="more-btn" onclick="getBlogData()" id="moreData">点击查看更多>></div>
        <div class="more-btn" id="noData" style="display: none">没有更多数据了哦~</div>
	</div>
</div>
{{#section 'footer'}}
    <script src="/js/handlebars-v4.0.10.js"></script>
    <script src="../../js/article/article.js"></script>
{{/section}}
