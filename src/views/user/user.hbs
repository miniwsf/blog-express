{{#section 'head'}}
    <link rel='stylesheet' href='/css/user.css'/>
{{/section}}
<div>
    <ol class="breadcrumb">
        <li><a href="#" class="active">我的信息</a></li>
    </ol>
</div>
<div class="content-article">
    <div class="bs-example bs-example-form" id="userInfo">
        <div class="avatar-border">
            {{#if user.avatar}}
                 <img src="{{user.avatar}}" class="avatar">
            {{/if}}
        </div>
        </br>
        <div class="input-group">
            <span class="input-group-addon" for="accessKey">登录账号</span>
            <input type="text" class="form-control" name="accessKey" value="{{user.userName}}" disabled/>
        </div>
        </br>
        <div class="input-group">
            <span class="input-group-addon" for="accessKey">用户昵称</span>
            <input type="text" class="form-control" placeholder="请填写您的用户昵称" name="accessKey" value="{{user.nickName}}" readonly/>
        </div>
        </br>
        <div class="btn-control">
            <button class="btn btn-primary btn-margin" onclick="editInfo()">修改信息</button>
        </div>
    </div>
    <div class="bs-example bs-example-form" id="userInfoEdit" style="display: none">
        <input type="text" id="userId" hidden value="{{user._id}}">
        <div class="avatar-border">
            <img src="{{user.avatar}}" class="avatar" id="avatar">
        </div>
        </br>
        <div class="file-input">
            <input type="file" id="file" name="file" accept="image/*" multiple class="btn btn-primary">
        </div>
        </br>
        <div class="input-group">
            <span class="input-group-addon" for="accessKey">登录账号</span>
            <input type="text" class="form-control" name="accessKey" value="{{user.userName}}" disabled/>
        </div>
        </br>
        <div class="input-group">
            <span class="input-group-addon" for="accessKey">用户昵称</span>
            <input type="text" class="form-control" placeholder="请填写您的用户昵称" id="nickName" name="accessKey" value="{{user.nickName}}"/>
        </div>
        </br>
        <div class="input-group">
            <span class="input-group-addon" for="accessKey">密码</span>
            <input type="password" class="form-control" placeholder="******" id="psd1" name="accessKey"/>
        </div>
        </br>
        <div class="input-group">
            <span class="input-group-addon" for="accessKey">再次确认密码</span>
            <input type="password" class="form-control" placeholder="******" id="psd2" name="accessKey"/>
        </div>
        </br>
        <div class="btn-control">
            <button class="btn btn-primary btn-margin" onclick="saveInfo()">保存信息</button>
        </div>
    </div>
</div>
{{#section 'footer'}}
    <script src="/js/user/user.js"></script>
{{/section}}
